<Page x:Class="WpfApp1_variant_1.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1_variant_1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Button Content="Материалы" x:Name="BtnMaterials" Width="88" Grid.Row="1"  Background="#ad692a" HorizontalAlignment="Center" Click="BtnMaterials_Click" Margin="0,93,0,0" Height="50" VerticalAlignment="Top" />

            <Button Content="Поставщики" x:Name="BtnProvider" Width="88" Grid.Row="1" Height="50"  Background="#ad692a" HorizontalAlignment="Center" VerticalAlignment="Top" Click="BtnProvider_Click" Margin="0,25,0,0" Visibility="Collapsed"></Button>
        </Grid>

    </Grid>
</Page>
