<Window x:Class="WpfApp1_variant_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_variant_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Background="#31577a" />
            <Grid Grid.Row="2" Background="#31577a" />
            <TextBlock Text="Завод «АгроПром»" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="White"  FontFamily="Bahnschrift SemiBold" />
            <Image Source="/logo2.png" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>

            <Frame  NavigationUIVisibility="Hidden" Grid.Row="1" Name="MainFrame" Navigated="MainFrame_Navigated"></Frame>

            <Button Content="Назад" x:Name="BtnBack" Width="50" Height="50"  Background="#ad692a" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnBack_Click" Margin="0,0,10,0" ></Button>
            








        </Grid>
    </Grid>
</Window>
